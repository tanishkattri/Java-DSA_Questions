package MathsForDSA;

public class SqRoot {
    public static void main(String[] args) {
        int n = 40;
        int p = 3; // up to which decimal value you want output
        System.out.printf("Output is %.3f",sqroot(40,p));
    }

    static double sqroot(int n, int p){
        // applying binary search for finding sq. root
        int start = 0;
        int end = n;
        double root = 0.0;
        while(start<=end){
            int mid = start + (end-start)/2;
            if(mid*mid == n){
                return mid;
            } else if (mid*mid>n) {
                end = mid-1;
            }else{
                start = mid + 1;
            }
        }
        double increment = 0.1;
        for (int i = 0; i < p; i++) {
            while (root*root<=n){
                root +=increment;
            }
            root -= increment;
            increment /=10;
        }
        return root;
    }
}
